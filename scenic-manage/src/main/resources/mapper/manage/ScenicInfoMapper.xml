<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lz.manage.mapper.ScenicInfoMapper">
    
    <resultMap type="ScenicInfo" id="ScenicInfoResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="status"    column="status"    />
        <result property="image"    column="image"    />
        <result property="describe"    column="describe"    />
        <result property="likesNumber"    column="likes_number"    />
        <result property="commentsNumber"    column="comments_number"    />
        <result property="looksNumber"    column="looks_number"    />
        <result property="sortNum"    column="sort_num"    />
        <result property="remark"    column="remark"    />
        <result property="userId"    column="user_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectScenicInfoVo">
        select id, name, status, image, describe, likes_number, comments_number, looks_number, sort_num, remark, user_id, create_time, update_by, update_time from tb_scenic_info
    </sql>

    <select id="selectScenicInfoList" parameterType="ScenicInfo" resultMap="ScenicInfoResult">
        <include refid="selectScenicInfoVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="describe != null  and describe != ''"> and describe = #{describe}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and DATE_FORMAT(create_time, '%Y-%m-%d') between #{params.beginCreateTime} and #{params.endCreateTime}</if>
        </where>
    </select>
    
    <select id="selectScenicInfoById" parameterType="Long" resultMap="ScenicInfoResult">
        <include refid="selectScenicInfoVo"/>
        where id = #{id}
    </select>

    <insert id="insertScenicInfo" parameterType="ScenicInfo" useGeneratedKeys="true" keyProperty="id">
        insert into tb_scenic_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="image != null and image != ''">image,</if>
            <if test="describe != null">describe,</if>
            <if test="likesNumber != null">likes_number,</if>
            <if test="commentsNumber != null">comments_number,</if>
            <if test="looksNumber != null">looks_number,</if>
            <if test="sortNum != null">sort_num,</if>
            <if test="remark != null">remark,</if>
            <if test="userId != null">user_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="image != null and image != ''">#{image},</if>
            <if test="describe != null">#{describe},</if>
            <if test="likesNumber != null">#{likesNumber},</if>
            <if test="commentsNumber != null">#{commentsNumber},</if>
            <if test="looksNumber != null">#{looksNumber},</if>
            <if test="sortNum != null">#{sortNum},</if>
            <if test="remark != null">#{remark},</if>
            <if test="userId != null">#{userId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateScenicInfo" parameterType="ScenicInfo">
        update tb_scenic_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="image != null and image != ''">image = #{image},</if>
            <if test="describe != null">describe = #{describe},</if>
            <if test="likesNumber != null">likes_number = #{likesNumber},</if>
            <if test="commentsNumber != null">comments_number = #{commentsNumber},</if>
            <if test="looksNumber != null">looks_number = #{looksNumber},</if>
            <if test="sortNum != null">sort_num = #{sortNum},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteScenicInfoById" parameterType="Long">
        delete from tb_scenic_info where id = #{id}
    </delete>

    <delete id="deleteScenicInfoByIds" parameterType="String">
        delete from tb_scenic_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>