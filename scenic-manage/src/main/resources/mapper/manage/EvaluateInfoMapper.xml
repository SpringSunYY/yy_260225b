<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lz.manage.mapper.EvaluateInfoMapper">

    <resultMap type="EvaluateInfo" id="EvaluateInfoResult">
        <result property="id"    column="id"    />
        <result property="scenicId"    column="scenic_id"    />
        <result property="status"    column="status"    />
        <result property="title"    column="title"    />
        <result property="score"    column="score"    />
        <result property="content"    column="content"    />
        <result property="remark"    column="remark"    />
        <result property="userId"    column="user_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectEvaluateInfoVo">
        select id, scenic_id, status, title, score, content, remark, user_id, create_time, update_by, update_time from tb_evaluate_info
    </sql>

    <select id="selectEvaluateInfoList" parameterType="EvaluateInfo" resultMap="EvaluateInfoResult">
        <include refid="selectEvaluateInfoVo"/>
        <where>
            <if test="id != null ">and id = #{id}</if>
            <if test="scenicId != null ">and scenic_id = #{scenicId}</if>
            <if test="status != null  and status != ''">and status = #{status}</if>
            <if test="title != null  and title != ''">and title like concat('%', #{title}, '%')</if>
            <if test="userId != null ">and user_id = #{userId}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''">
                and DATE_FORMAT(create_time, '%Y-%m-%d') between #{params.beginCreateTime} and #{params.endCreateTime}
            </if>
            <!-- 数据范围过滤 -->
            ${params.dataScope}
        </where>
        order by create_time desc
    </select>

    <select id="selectEvaluateInfoById" parameterType="Long" resultMap="EvaluateInfoResult">
        <include refid="selectEvaluateInfoVo"/>
        where id = #{id}
    </select>

    <insert id="insertEvaluateInfo" parameterType="EvaluateInfo" useGeneratedKeys="true" keyProperty="id">
        insert into tb_evaluate_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="scenicId != null">scenic_id,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="title != null and title != ''">title,</if>
            <if test="score != null">score,</if>
            <if test="content != null">content,</if>
            <if test="remark != null">remark,</if>
            <if test="userId != null">user_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="scenicId != null">#{scenicId},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="title != null and title != ''">#{title},</if>
            <if test="score != null">#{score},</if>
            <if test="content != null">#{content},</if>
            <if test="remark != null">#{remark},</if>
            <if test="userId != null">#{userId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateEvaluateInfo" parameterType="EvaluateInfo">
        update tb_evaluate_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="scenicId != null">scenic_id = #{scenicId},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="score != null">score = #{score},</if>
            <if test="content != null">content = #{content},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteEvaluateInfoById" parameterType="Long">
        delete from tb_evaluate_info where id = #{id}
    </delete>

    <delete id="deleteEvaluateInfoByIds" parameterType="String">
        delete from tb_evaluate_info where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
