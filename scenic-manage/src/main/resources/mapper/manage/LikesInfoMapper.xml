<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lz.manage.mapper.LikesInfoMapper">
    
    <resultMap type="LikesInfo" id="LikesInfoResult">
        <result property="id"    column="id"    />
        <result property="scenicId"    column="scenic_id"    />
        <result property="remark"    column="remark"    />
        <result property="userId"    column="user_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectLikesInfoVo">
        select id, scenic_id, remark, user_id, create_time, update_by, update_time from tb_likes_info
    </sql>

    <select id="selectLikesInfoList" parameterType="LikesInfo" resultMap="LikesInfoResult">
        <include refid="selectLikesInfoVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="scenicId != null "> and scenic_id = #{scenicId}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and DATE_FORMAT(create_time, '%Y-%m-%d') between #{params.beginCreateTime} and #{params.endCreateTime}</if>
        </where>
    </select>
    
    <select id="selectLikesInfoById" parameterType="Long" resultMap="LikesInfoResult">
        <include refid="selectLikesInfoVo"/>
        where id = #{id}
    </select>

    <insert id="insertLikesInfo" parameterType="LikesInfo" useGeneratedKeys="true" keyProperty="id">
        insert into tb_likes_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="scenicId != null">scenic_id,</if>
            <if test="remark != null">remark,</if>
            <if test="userId != null">user_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="scenicId != null">#{scenicId},</if>
            <if test="remark != null">#{remark},</if>
            <if test="userId != null">#{userId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateLikesInfo" parameterType="LikesInfo">
        update tb_likes_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="scenicId != null">scenic_id = #{scenicId},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLikesInfoById" parameterType="Long">
        delete from tb_likes_info where id = #{id}
    </delete>

    <delete id="deleteLikesInfoByIds" parameterType="String">
        delete from tb_likes_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>